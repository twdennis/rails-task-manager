<h1 class="font-semibold text-3xl mb-8">My tasks</h1>

<div class="space-y-2">
  <%# <ul style="list-style: none;"> %>
    <% @tasks.each do |task|  %>
    
      <li>
      <% if task.completed %>
        ☑️
      <% else %>
        ❌
      <% end %>
      <%= link_to task.title, task_path(task) %>
      </li>
      <% end %>
  </ul>
  <%= link_to "➕ Create new task", new_path %>
</div>
